<resources>xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TodoEasy" parent="Theme.MaterialComponents.NoActionBar">

        <item name="android:colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="background">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="colorOnBackground">@color/onBackground</item>
        <item name="colorOnSurface">@color/onSurface</item>
        <item name="colorOnError">@color/onError</item>
        <item name="fontFamily">@font/roboto_condensed_regular</item>

        <!-- Primary brand color. -->
        <item name="android:statusBarColor">@color/dark_card</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>

        <item name="android:windowActivityTransitions">true</item>

        <item name="android:windowAnimationStyle">@style/animationDialog</item>

        <item name="android:popupMenuStyle">@style/PopupMenu</item>

        <item name="listPopupWindowStyle">@style/popupMenuCustom</item>
    </style>


</resources>